{% extends "base.html.twig" %}

{% block title %}
    Single Article
{% endblock %}

{% block body %}
    <h1>
        {{ movie.name }}
    </h1>

    <div class="row">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        {{ movie.name }}
                    </h5>
                    {% if movie.image starts with 'http' %}
                        <img style="max-width: 100%" src="{{movie.image}}" alt="{{movie.name}}"/>
                    {% else %}
                        <img style="max-width: 100%" src="/assets/upload/images/{{movie.image}}" alt="{{movie.name}}"/>
                    {% endif %}
                    <div class="card-text"> {{ movie.synopsis | raw}}</div>
                    
                </div>
            </div>
    </div>
{% endblock %}