{% extends "base.html.twig" %}

{% block title %}
    Films
    
{% endblock %}

{% block body %}

    <h1 class="text-center p-5">
        voici tous nos films
            
    </h1>
    {% if app.user %}
        <div class="mb-3">
            vous etes connect√© en tant que 
            {{ app.user.username }}
            , 
            <a href="{{ path('app_logout') }}">
                deconnection
            </a>
        </div>
    {% endif %}
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for movie in movies %}
                <div class="col">
                    <div class="card h-100">
                        <img src="{{ movie.image }}" class="card-img-top" alt="{{ movie.name }}">
                            <div class="card-body">
                                <h5 class="card-title">
                                    {{ movie.name }}
                                </h5>
                                <p class="card-text" style="white-space: nowrap;
                                                                     overflow: hidden;
                                                                     text-overflow: ellipsis;
                                                                     max-width: 200px;">
                                    Synopsis : 
                                    {{ movie.synopsis }}
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

    {% endblock %}
    